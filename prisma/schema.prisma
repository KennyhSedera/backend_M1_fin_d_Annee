datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  username String
  useremail String  @unique
  password String 
  status String 
  role String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Enseignant {
  id Int @id @default(autoincrement())
  codeProf String @unique
  nom String
  prenom String
  contact String
  grade String
}

model Matiere {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}