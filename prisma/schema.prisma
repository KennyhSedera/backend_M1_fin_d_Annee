datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String
  useremail String   @unique
  password  String 
  status    String 
  role      String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Mention {
  id        Int        @id @default(autoincrement())
  nom       String
  parcours  Parcours[]
}

model Parcours {
  id              Int              @id @default(autoincrement())
  nom             String
  mentionId       Int
  mention         Mention          @relation(fields: [mentionId], references: [id], map: "parcours_mention_fkey")
  parcoursNiveaux ParcoursNiveau[]
  volumesHoraire  VolumeHoraire[]  @relation("parcours_volume_horaire_fkey")
}

model Niveau {
  id                   Int                  @id @default(autoincrement())
  nom                  String
  parcoursNiveaux      ParcoursNiveau[]
  volumesHoraire       VolumeHoraire[]      @relation("niveau_volume_horaire_fkey")
  heuresComplementaires HeuresComplementaire[]
}

model ParcoursNiveau {
  id                 Int             @id @default(autoincrement())
  parcoursId         Int
  niveauId           Int
  anneeUniversitaire String
  nombreEtudiants    Int
  nombreGroupesET    Int
  nombreGroupesED    Int
  nombreGroupesEP    Int
  parcours           Parcours        @relation(fields: [parcoursId], references: [id], map: "parcoursNiveau_parcours_fkey")
  niveau             Niveau          @relation(fields: [niveauId], references: [id], map: "parcoursNiveau_niveau_fkey")
  volumesHoraire     VolumeHoraire[]
}

model VolumeHoraire {
  id                    Int                       @id @default(autoincrement())
  uniteEnseignement     String
  elementConstitutif    String
  semestre              String
  et                    Int?
  ed                    Int?
  ep                    Int?
  creditUE              Int?
  creditEC              Float
  poidsEC               Float
  parcoursNiveauId      Int?
  parcoursNiveau        ParcoursNiveau?           @relation(fields: [parcoursNiveauId], references: [id])
  enseignantVolumeHoraire EnseignantVolumeHoraire[]

  parcours              Parcours[]                @relation("parcours_volume_horaire_fkey")
  niveau                Niveau[]                  @relation("niveau_volume_horaire_fkey")

  @@map("volume_horaire")
}

model Grade {
  id           Int            @id @default(autoincrement())
  title        String
  taux         Int
  enseignants  Enseignant[]   @relation("grade_enseignant")
}

model Enseignant {
  id                      Int                      @id @default(autoincrement())
  nom                     String
  prenom                  String
  contact                 String
  gradeId                 Int?
  grade                   Grade?                   @relation(fields: [gradeId], references: [id], name: "grade_enseignant") // Correction ici : rendre 'grade' optionnel
  type                    String
  enseignantVolumeHoraire EnseignantVolumeHoraire[]
  heuresComplementaires   HeuresComplementaire[]
}

model EnseignantVolumeHoraire {
  id              Int             @id @default(autoincrement())
  enseignantId    Int
  enseignant      Enseignant      @relation(fields: [enseignantId], references: [id], map: "enseignantVolumeHoraire_enseignant_fkey")
  volumeHoraireId Int
  volumeHoraire   VolumeHoraire   @relation(fields: [volumeHoraireId], references: [id], map: "enseignantVolumeHoraire_volumeHoraire_fkey")
}

model HeuresComplementaire {
  id               Int            @id @default(autoincrement())
  enseignantId     Int
  niveauId         Int
  nbEncadrement    Int
  tauxEncadrement  Int
  nbSoutenance     Int
  tauxSoutenance   Int
  enseignant       Enseignant     @relation(fields: [enseignantId], references: [id], map: "heuresComplementaire_enseignant_fkey")
  niveau           Niveau         @relation(fields: [niveauId], references: [id], map: "heuresComplementaire_niveau_fkey")
}
